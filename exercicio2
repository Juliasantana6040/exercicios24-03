import java.util.Scanner;


public class Main {
  public static void main(String[] args) {
   Scanner in = new Scanner(System.in);

    int nomeusuario;
    int senhausuario;

    System.out.println("Digite o seu usuario: ");
    nomeusuario = in.nextInt();

    System.out.println("Digite sua senha: ");
    senhausuario = in.nextInt();

   if (nomeusuario == senhausuario){
      
      System.out.println("Erro: A senha não pode ser igual ao nome de usuário. Por favor, tente novamente.\n");

    }  
    else
     {
      System.out.println("Nome de usuário e senha aceitos.");
      break;
     
     }
